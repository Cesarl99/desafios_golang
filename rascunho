func lertexto(caminhodoarquivo string) (int, error) {
	arquivo, err := os.Open(caminhodoarquivo)
	if err != nil {
		return nil, err
	}
	defer arquivo.Close()
	var linhas []int
	scanner := bufio.NewScanner(arquivo)
	for scanner.Scan() {
		linhas = append(linhas)
	}
	return linhas, scanner.Err()
}

